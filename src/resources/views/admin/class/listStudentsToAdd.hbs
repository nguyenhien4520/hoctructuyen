<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <a class="navbar-brand" href="#">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin">Quay về trang Admin</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <form class="container mt-4 " id="add-students-to-class" data-id="{{classId}}" method="post">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Danh sách học sinh</h1>
        </div>

        <!-- Table -->
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Họ và tên</th>
                    <th scope="col">Tên tài khoản</th>
                    <th scope="col">Lớp</th>
                    <th scope="col">Ngày tạo</th>
                    <th scope="col">Chọn</th>
                </tr>
            </thead>
            <tbody>
                {{#each students}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.username}}</td>
                    <td>
                        {{#if this.classes}}
                        {{#if this.classes.length}}
                        {{this.classes.[0].name}}
                        {{else}}
                        N/A
                        {{/if}}
                        {{else}}
                        N/A
                        {{/if}}
                    </td>

                    <td>{{formatDate this.createdAt 'dd/MM/yyyy HH:mm'}}</td>
                    <td><input class="form-check-input ml-3" type="checkbox" value="{{this._id}}" name="studentIds[]">
                </tr>
                {{/each}}
            </tbody>
        </table>
        <button class="btn btn-success btn-sm " id="btn-add-student-to-class">Thêm</button>
    </form>

    <!-- Bootstrap and Popper.js scripts -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>

    <!-- Custom script -->
    <script>
        const form = $('#add-students-to-class');
        const classId = form.data('id');
        const btnAddStudent = $('#btn-add-student-to-class');
        btnAddStudent.on('click', function (e) {
            e.preventDefault();
            form.attr('action', `/admin/class/${classId}/add-students?_method=PUT`);
            form.submit();
        });

    </script>

</body>

</html>
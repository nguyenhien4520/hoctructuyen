<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <h4 class="">{{test.title}}</h4>
        <button class="btn-sm btn btn-success ml-5" id="lambai">Làm bài</button>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/student"><i class="fa fa-home" aria-hidden="true"></i></a>
                </li>
            </ul>
        </div>
    </nav>
    <form class="mt-4 " id="form-quiz" action="submit-test" method="POST">
        <input type="hidden" id="showAnswer" name="showAnswer" value="{{show}}">

        {{#each test.questions as |question qIndex|}}
        <div>
            <h5>{{question.text}}</h5>
            <input type="hidden" name="answers[{{qIndex}}]" value="">
            {{#each question.options as |option oIndex|}}
            <label>
                <input type="radio" name="answers[{{qIndex}}]" value="{{oIndex}}">
                {{option.text}}
            </label><br>
            {{/each}}
        </div>
        {{/each}}
        <input type="hidden" name="testId" value="{{test._id}}">
        <button type="submit" class="btn btn-success mt-4" id="btn-submit">Submit</button>
    </form>
    <div class="wrap-score">
        <h2> Điểm: <span id="score"></span>/10</h2>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous">
    </script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>
<script>
    console.log($('#showAnswer').val())
    $(document).ready(function () {
        $('#form-quiz').hide();
        $('.wrap-score').hide();

    });
    $('#lambai').on('click', function (e) {
        $('#form-quiz').show();
        $('#lambai').hide();
    })

    // fetch
    $(document).ready(function () {
        const form = $('#form-quiz');
        form.on('submit', function (event) {
            event.preventDefault();

            const formData = new FormData(form[0]);

            // Gửi dữ liệu tới server bằng cách submit form qua Ajax
            fetch(form.attr('action'), {
                method: form.attr('method'), // Lấy method từ form (POST)
                body: formData
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if ($('#showAnswer').val() == "true") {
                        var arr = data.corrects;
                        arr.forEach((val, index) => {
                            var element = $(`input[name="answers[${index}]"][value="${val}"]`)
                            element.closest('label').css('background-color', 'yellow');
                        })
                    }

                    $('#btn-submit').hide();
                    $('.wrap-score').show();
                    $('#score').text(data.score);
                })
                .catch(error => {
                    console.error('Error:', error);
                    // Xử lý lỗi nếu có
                });
        });
    });



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <style>
        .table {
            min-width: 1500px;
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <a class="navbar-brand" href="#">
            <h4>Teacher Panel</h4>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/teacher">
                        <h4>Trang chủ <i class="fa fa-home" aria-hidden="true"></i></h4>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
<input type="checkbox" checked data-toggle="toggle" data-on="Ready" data-off="Not Ready" data-onstyle="success" data-offstyle="danger">
    <!-- Table -->
    <div class="table-responsive mt-5">
        <table id="resultsTable" class="table table-bordered">
            <thead>
                <tr>
                    <th>Học sinh</th>
                    <th>Lớp</th>
                    <th>Điểm</th>
                    <th>Câu hỏi</th>
                    <th>Đáp án đã chọn</th>
                    <th>Đáp án đúng</th>
                    <th>Kết quả</th>
                </tr>
            </thead>
            <tbody>
                {{#each testResults}}
                {{#each this.resultAnswers}}
                <tr>
                    {{#if @first}}
                    <td rowspan="{{../resultAnswers.length}}">{{../student.name}}</td>
                    <td rowspan="{{../resultAnswers.length}}">{{../class.name}}</td>
                    <td rowspan="{{../resultAnswers.length}}">{{../score}}</td>
                    {{/if}}
                    <td>{{sum this.questionIndex 1}}</td>
                    <td>{{optionLetter this.userSelectedOption}}</td> <!-- Sử dụng helper để hiển thị A, B, C, D -->
                    <td>{{optionLetter this.correctAnswer}}</td>
                    <td>{{#if this.isCorrect}}Đúng{{else}}Sai{{/if}}</td>
                </tr>
                {{/each}}
                {{/each}}
            </tbody>
        </table>

    </div>
    <button id="downloadExcel" class="btn btn-success mt-5">Tải xuống file Excel</button>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous">
        </script>
    <script>
        document.getElementById('downloadExcel').addEventListener('click', function () {

            var table = document.getElementById('resultsTable');
            var workbook = XLSX.utils.table_to_book(table, { sheet: "Kết quả" });

            XLSX.writeFile(workbook, 'ket_qua.xlsx');
        });
    </script>

</body>

</html>
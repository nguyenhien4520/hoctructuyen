<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css"
        rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
    <style>
        .table {
            min-width: 1500px;
        }
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <a class="navbar-brand" href="#">
            <h4>Teacher Panel</h4>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/teacher">
                        <h4>Trang chủ <i class="fa fa-home" aria-hidden="true"></i></h4>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="mt-4">
        <input type="checkbox" id="toggle-event" checked data-toggle="toggle" data-off="Rút gọn" data-on="Chi tiết"
            data-onstyle="success" data-offstyle="info" data-style="ios" data-size="xs">
    </div>
    <style>
        .toggle.ios,
        .toggle-on.ios,
        .toggle-off.ios {
            border-radius: 20rem;
        }

        .toggle.ios .toggle-handle {
            border-radius: 20rem;
        }
    </style>
    <!-- Table -->
    <div class="table-responsive mt-5">
        <table id="resultsTable" class="table table-bordered tb1">
            <thead>
                <tr>
                    <th>Học sinh</th>
                    <th>Lớp</th>
                    <th>Điểm</th>
                    <!-- Tạo cột cho từng câu hỏi dựa trên số câu hỏi của học sinh đầu tiên -->
                    {{#each testResults.[0].resultAnswers}}
                    <th>Câu {{sum @index 1}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each testResults}}
                <tr>
                    <td>{{student.name}}</td>
                    <td>{{class.name}}</td>
                    <td>{{score}}</td>
                    <!-- Lặp qua từng câu hỏi để hiển thị kết quả của học sinh -->
                    {{#each resultAnswers}}
                    <td>{{#if this.isCorrect}}<b class="text-success"><i class="fa fa-check" aria-hidden="true"></i>
                            Đúng</b>{{else}}<b class="text-danger"><i class="fa fa-times" aria-hidden="true"></i>
                            Sai</b>{{/if}}</td>
                    {{/each}}
                </tr>
                {{/each}}
            </tbody>
        </table>

        {{!-- table chi tiết --}}
        <table id="resultsTable" class="table table-bordered tb2">
            <thead>
                <tr>
                    <th>Học sinh</th>
                    <th>Lớp</th>
                    <th>Điểm</th>
                    <th>Câu hỏi</th>
                    <th>Đáp án đã chọn</th>
                    <th>Đáp án đúng</th>
                    <th>Kết quả</th>
                </tr>
            </thead>
            <tbody>
                {{#each testResults}}
                {{#each this.resultAnswers}}
                <tr>
                    {{#if @first}}
                    <td rowspan="{{../resultAnswers.length}}">{{../student.name}}</td>
                    <td rowspan="{{../resultAnswers.length}}">{{../class.name}}</td>
                    <td rowspan="{{../resultAnswers.length}}">{{../score}}</td>
                    {{/if}}
                    <td>{{sum this.questionIndex 1}}</td>
                    <td>{{optionLetter this.userSelectedOption}}</td> <!-- Sử dụng helper để hiển thị A, B, C, D -->
                    <td>{{optionLetter this.correctAnswer}}</td>
                    <td>{{#if this.isCorrect}}Đúng{{else}}Sai{{/if}}</td>
                </tr>
                {{/each}}
                {{/each}}
            </tbody>
        </table>


    </div>
    <button id="downloadExcel" class="btn btn-success mt-5">Tải xuống file Excel</button>





    <style>
        #resultsTable {
            table-layout: auto;
            width: 100%;
        }

        #resultsTable th,
        #resultsTable td {
            white-space: nowrap;
            padding: 8px 12px;
            text-align: center;
        }

        #resultsTable th {
            font-weight: bold;
        }
    </style>




    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous">
        </script>
    <script>
        $('.tb2').hide();

        $('#toggle-event').change(function () {
            $('.tb1').toggle();
            $('.tb2').toggle();
        })
        document.getElementById('downloadExcel').addEventListener('click', function () {

            // Lấy dữ liệu từ bảng hiện có
            var table = document.querySelector('.tb1'); // Chọn bảng rút gọn có chứa các cột Học sinh, Lớp, Điểm
            var rows = table.querySelectorAll('tbody tr');
            // Tạo mảng chứa dữ liệu chỉ gồm các cột cần thiết
            var data = [];
            data.push(['Học sinh', 'Lớp', 'Điểm']); // Thêm tiêu đề

            rows.forEach(function (row) {
                var studentName = row.cells[0].textContent;
                var className = row.cells[1].textContent;
                var score = row.cells[2].textContent;

                data.push([studentName, className, score]); // Thêm dòng dữ liệu
            });

            // Chuyển đổi dữ liệu sang định dạng worksheet
            var worksheet = XLSX.utils.aoa_to_sheet(data);
            var workbook = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(workbook, worksheet, 'Kết quả');

            // Xuất file Excel
            XLSX.writeFile(workbook, 'ket_qua.xlsx');
        });
    </script>

</body>

</html>